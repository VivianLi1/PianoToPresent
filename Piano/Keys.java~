public class Keys {
  //Instance variables: width, length, x/y coordinate, color; note
  int x, y, origColor, col;
  char note;

  //constructor
  Keys(int x, int y, int origColor, char note) {
    setx(x);
    sety(y);
    setOrigColor(origColor);
    setColor(origColor);
    setNote(note);
  }

  Keys() {
  }

  public int getx() {
    return x;
  }
  void setx(int xcor) {
    x=xcor;
  }

  int gety() {
    return y;
  }
  void sety(int ycor) {
    y=ycor;
  }

  char getNote() {
    return note;
  }
  void setNote(char n) {
    note=n;
  }

  void setOrigColor(int oc) {
    origColor = oc;
  }

  void setColor(int c) {
    col = c;
  }

  int getColor() {
    return col;
  }

  void show() {
  }


  //used by Piano to change color and play note

  public void pressed(boolean p) {
    /*
    if (p) {
      setColor(255);
      show();
    } else {
      //go back to normal
      setColor(origColor);
      show();
    }
  */
  }
  
}
